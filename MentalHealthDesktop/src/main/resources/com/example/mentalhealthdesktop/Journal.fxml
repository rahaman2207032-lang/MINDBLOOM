<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mentalhealthdesktop.controller.JournalController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #6ba3d8; -fx-padding: 15 20;">
            <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18; -fx-cursor: hand;" text="â† Back" />
            <Label text="My Journal" textFill="white">
                <font>
                    <Font name="System Bold" size="22" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <Label fx:id="lastUpdatedLabel" style="-fx-text-fill: #666; -fx-font-size: 12;" text="Last updated: Never" />

            <TextArea fx:id="journalTextArea" prefHeight="400.0" promptText="Start writing your thoughts here..."
                      style="-fx-font-size: 14; -fx-padding: 10; -fx-border-color: #ccc; -fx-border-radius: 5; -fx-background-radius: 5;"
                      wrapText="true" />

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="statusLabel" style="-fx-text-fill: #28a745; -fx-font-size: 12;" text="" />
                <Button fx:id="saveButton" onAction="#handleSave"
                        style="-fx-background-color: #6ba3d8; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 30; -fx-cursor: hand; -fx-background-radius: 5;"
                        text="Save Journal" />
            </HBox>

            <Label style="-fx-text-fill: #999; -fx-font-size: 11; -fx-padding: 10 0 0 0;"
                   text="ðŸ’¡ Tip: Your journal is private and automatically saved to your account."
                   wrapText="true" />
        </VBox>
    </center>
</BorderPane>

